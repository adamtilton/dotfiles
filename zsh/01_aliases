alias va="vim ~/.zsh/01_aliases; source ~/.zsh/01_aliases"
alias ..="cd .."
alias ls="ls --color"
alias ll="ls -lh"
alias la="ll"
alias kX="killall X"
alias vo="vim -O"

alias matlab="wmname LG3D && matlab &"

alias ga='git add'
alias gp='git push'
alias gl='git log --pretty=oneline'
alias gs='git status'
alias gd='git diff'
alias gdc='git diff --cached'
alias gm='git commit -m'
alias gma='git commit -am'
alias gb='git branch'
alias gc='git checkout'
alias gra='git remote add'
alias grr='git remote rm'
alias gpu='git pull'
alias gcl='git clone'

alias shunya='ssh -Y atilton2@sunnata.csl.illinois.edu'
alias sunnata='ssh -Y atilton2@sunnata.csl.illinois.edu'
alias shunyata='ssh -Y atilton2@shunyata.csl.illinois.edu'
